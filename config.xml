<?xml version='1.0' encoding='utf-8'?>
<widget id="collegecounsel.mobile" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>collegecounsel</name>
    <description>
       A college list builder app that assist with the college search process
    </description>
    <author email="jacky200218@gmail.com" href="">
        Jiaqi Wang
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/RoundedIcon.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false"/>
        <splash src="www/img/splashandroid/drawable-land-hdpi/screen.png" density="land-hdpi"/>
        <splash src="www/img/splashandroid/drawable-land-ldpi/screen.png" density="land-ldpi"/>
        <splash src="www/img/splashandroid/drawable-land-mdpi/screen.png" density="land-mdpi"/>
        <splash src="www/img/splashandroid/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>

        <splash src="www/img/splashandroid/drawable-hdpi/screen.png" density="port-hdpi"/>
        <splash src="www/img/splashandroid/drawable-ldpi/screen.png" density="port-ldpi"/>
        <splash src="www/img/splashandroid/drawable-mdpi/screen.png" density="port-mdpi"/>
        <splash src="www/img/splashandroid/drawable-xhdpi/screen.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
